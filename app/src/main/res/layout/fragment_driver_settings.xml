<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.driver.driverSettings.DriverSettingsFragment" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">
            <ImageView
                android:id="@+id/imgCustProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/noimg"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_toEndOf="@+id/imgCustProfile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/customerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+977 0000000"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_toEndOf="@+id/imgCustProfile"
                android:layout_below="@+id/customerName"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_below="@+id/cardProf">
        <ListView
            android:id="@+id/listView"
            android:layout_below="@+id/cardProf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/driver_setting_layout"/>
    </LinearLayout>
</RelativeLayout>